<div class="banner">
  <div class="banner-content">
    <h1><strong>The Cocktail Factory</strong></h1>
    <p> Brings bartender skills to party people</p>
  </div>
</div>

<div class="container">
  <div class="row">
  <% @cocktails.each do |cocktail| %>
    <div class="col-sm-4">
      <div class="card"  style="background-image: linear-gradient(rgba(0,0,0,0.8), rgba(0,0,0,0.3)),
         url('<%= cl_image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
        <div class="card-name">
          <p><%= link_to cocktail.name.capitalize, cocktail_path(cocktail.id) %></p>
        </div>
      </div>
    </div>
  <% end %>
  </div>
</div>


